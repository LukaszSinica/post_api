{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container">
        <div class="user-info">
            <h1>Welcome {{ app.user.email }}</h1>
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="admin-links">
                <h3>Admin Actions:</h3>
                <ul>
                    <li><a href="{{ path('app_posts_index') }}">Manage Posts</a></li>
                    <li><a href="{{ path('app_images_index') }}">Manage Images</a></li>
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}