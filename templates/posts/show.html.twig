{# filepath: templates/posts/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="card show-post-card">
        <div class="card-body">
            <h1>Posts</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ post.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ post.title }}</td>
                    </tr>
                    {% if post.image %}
                        <tr>
                            <th>Image</th>
                            <td>
                                <div class="post-thumbnail">
                                    <img src="{{ asset('uploads/images/' ~ post.image.filename) }}" 
                                         alt="{{ post.image.originalFilename }}"
                                         class="img-thumbnail">
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                    <tr>
                        <th>Content</th>
                        <td>
                            <div class="content-scroll">
                                {{ post.content|raw }}
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex gap-2">
                <a href="{{ path('app_posts_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('app_posts_edit', {'id': post.id}) }}" class="btn btn-primary">Edit</a>
                {{ include('posts/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}