{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts List</h1>

    <div class="mb-3">
        <a href="{{ path('app_posts_new') }}" class="btn btn-primary">Create New Post</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.content|raw }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="btn-group btn-group-sm mx-2" role="group">
                        <a href="{{ path('app_posts_show', {'id': post.id}) }}" class="btn btn-info">Show</a>
                        <a href="{{ path('app_posts_edit', {'id': post.id}) }}" class="btn btn-warning">Edit</a>
                        <form method="post" action="{{ path('app_posts_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
